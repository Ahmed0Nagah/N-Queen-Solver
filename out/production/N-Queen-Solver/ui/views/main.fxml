<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.MainController">
    <top>
        <HBox spacing="8" alignment="CENTER_LEFT">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            <Label text="N:"/>
            <Spinner fx:id="nSpinner" prefWidth="80"/>
            <Button fx:id="solveBtn" text="Solve"/>
            <Button fx:id="stopBtn" text="Stop" disable="true"/>
            <CheckBox fx:id="findAllCheckbox" text="Find all solutions"/>
            <Label text="Speed:"/>
            <Slider fx:id="speedSlider" min="0" max="500" value="100" prefWidth="150"/>
            <ToggleButton fx:id="animateToggle" text="Animate" selected="true"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <StackPane fx:id="boardContainer">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </StackPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="8">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            <Label text="Solutions:"/>
            <Label fx:id="solutionsLabel" text="0"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="exportBtn" text="Export Solutions" disable="true"/>
        </HBox>
    </bottom>
</BorderPane>